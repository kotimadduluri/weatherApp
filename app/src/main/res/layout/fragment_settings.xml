<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment"
    style="@style/screenTheme">

    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/title_settings"
        style="@style/pageHeader"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pageTitle"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_70"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Delete all location"
                android:gravity="center_vertical"
                android:layout_toStartOf="@+id/deleteIcon"
                android:padding="@dimen/dp_10"
                android:textStyle="bold"
                style="@style/settingsLableStyle"/>
            <ImageView
                android:id="@+id/deleteIcon"
                android:layout_alignParentEnd="true"
                android:layout_width="@dimen/dp_70"
                android:layout_height="match_parent"
                android:src="@drawable/ic_delete_24"
                android:scaleType="centerInside"
                style="@style/settingsIconStyle"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/mode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_70"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Enable dark mode"
                android:gravity="center_vertical"
                android:layout_toStartOf="@+id/modeSwitch"
                android:padding="@dimen/dp_10"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/modeSwitch"
                android:layout_alignParentEnd="true"
                android:layout_width="@dimen/dp_70"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_forward"
                app:tint="@color/appBg_dark"
                android:scaleType="centerInside"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/help"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mode"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_70"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/help"
                android:gravity="center_vertical"
                android:layout_toStartOf="@+id/helpIcon"
                android:padding="@dimen/dp_10"
                android:textStyle="bold"
                style="@style/settingsLableStyle"/>
            <ImageView
                android:id="@+id/helpIcon"
                android:layout_alignParentEnd="true"
                android:layout_width="@dimen/dp_70"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_forward"
                android:scaleType="centerInside"
                style="@style/settingsIconStyle"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>