<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherReport" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">monospace</item>
        <item name="background">@color/appBg_dark</item>
    </style>

    <style name="pageHeader" parent="textShadowStyle">
        <item name="android:textColor">@color/appBg_light</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:paddingStart">@dimen/dp_20</item>
        <item name="android:textStyle">bold</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="screenTheme" parent="Theme.WeatherReport">
        <item name="android:textColor">@color/appBg_dark</item>
    </style>

    <style name="addLocationButtonStyle" parent="Theme.WeatherReport">
        <item name="android:layout_width">?attr/actionBarSize</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="tint">@color/appBg_light</item>
        <item name="srcCompat">@drawable/ic_add_location_24</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="cityScreenTheme" parent="Theme.WeatherReport">
        <item name="android:background">@drawable/dark_theme_bg</item>
    </style>

    <style name="settingsLableStyle" parent="Theme.WeatherReport">
        <item name="android:textColor">@color/appBg_light</item>
    </style>

    <style name="settingsIconStyle" parent="Theme.WeatherReport">
        <item name="tint">@color/appBg_light</item>
    </style>

</resources>